account henschel
host mail.messagingengine.com
port 587
protocol smtp
auth on
from daniel@henschel.cc
user daniel@henschel.cc
passwordeval "gpg -q --for-your-eyes-only --no-tty -d ~/passwords/mail_henschel.gpg"
tls on
tls_nocertcheck

